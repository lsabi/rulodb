{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/**/*", "__tests__/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
